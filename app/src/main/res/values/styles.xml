<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/lightBackground</item>
    </style>
    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_background</item>
    </style>
    <style name="BaseTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="largeTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="largeDarkTextView" parent="largeTextView">
        <item name="android:textColor">@color/darkText</item>
    </style>

    <style name="MediumTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MediumBlackTextView" parent="MediumTextView">
        <item name="android:textColor">@color/darkText</item>
    </style>
    <style name="MediumGreyTextView" parent="MediumTextView">
        <item name="android:textColor">@color/greyText</item>
    </style>
    <style name="MediumLightTextView" parent="MediumTextView">
        <item name="android:textColor">@color/lightText</item>
    </style>

    <style name="DashButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/xsmall_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/xsmall_margin</item>
        <item name="android:layout_marginRight">@dimen/xsmall_margin</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>

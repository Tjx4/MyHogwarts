<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/small_margin"
        android:background="@drawable/icon_background">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rimgvIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="0dp"
            android:src="@drawable/ic_house_dark"
            android:scaleType="fitCenter"
            android:layout_margin="@dimen/medium__margin"
            android:layout_gravity="center"/>

    <TextView
            android:id="@+id/tvFeatureName"
            style="@style/MediumBlackTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/feature_name_background"
            android:textColor="#000"
            tools:text="Feature name" />

</FrameLayout>